<Page x:Class="AdvertisingCampaignApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdvertisingCampaignApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="40"  Foreground="#0078D7" Margin="0,30,0,20" FontFamily="Gill Sans Ultra Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="логин" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold" FontSize="16" Foreground="#FFA7A7A7"/>
            <TextBox x:Name="txtLogin" Margin="0,5" FontSize="16" Width="272" FontFamily="Microsoft JhengHei" Height="30" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBlock Text="пароль" Margin="0,5" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold" FontSize="16" Foreground="#FFA7A7A7"/>
            <PasswordBox x:Name="txtPassword" FontSize="12" Width="272" FontFamily="Microsoft JhengHei" Height="30" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Content="Войти" Background="#0078D7" Foreground="White" Margin="0,30,0,0" Click="Login_Click" Width="272" HorizontalAlignment="Center" FontFamily="Gill Sans Ultra Bold" FontSize=  "14" Height="30"/>
            <Button Content="Еще нет аккаунта? Зарегистрироваться" Foreground="#0078D7" Margin="0,8,0,0" Click="Register_Click" Width="273" Background="#00000000" BorderBrush="Transparent" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>
